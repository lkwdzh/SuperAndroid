<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <com.example.wytings.widget.TabClickableLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@null"
        app:tabGravity="fill"
        app:tabIndicatorColor="@android:color/holo_green_dark"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@android:color/holo_green_light"
        app:tabTextColor="@android:color/black" />

    <com.example.wytings.graph.TimesGraph
        android:id="@+id/timesGraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.wytings.graph.CandleGraph
        android:id="@+id/candleGraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>

